<Window x:Class="Chess.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.View"
        mc:Ignorable="d"
        Title="Chess by Astdy" MinHeight="600" MinWidth="800"  Height="600" Width="800">
    <Grid>
        <Image Source="Sprites/background.jpg" Margin="0" Stretch="Fill"></Image>
        <Grid Margin="120,25">
            <Border x:Name="Mask" Background="Black" CornerRadius="30" Margin="5"/>
            <Image Source="Sprites/backgroundTable.jpg" Stretch="Fill">
            </Image>
            <UniformGrid  x:Name="Table" Background="DarkRed" Margin="15">
                
            </UniformGrid>
        </Grid>
    </Grid>
</Window>  
    